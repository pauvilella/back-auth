{
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/"
    },
    "editor.formatOnSave": true,
    "ruff.args": ["--config=./pyproject.toml"],
    "ruff.path": [".venv/bin/ruff"],
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.wordBasedSuggestions": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
        }
    },
    "python.formatting.provider": "black",
    "python.formatting.blackArgs":["--config=./pyproject.toml"],
    "python.languageServer": "Pylance", // use Pylance to get advantatge of it's features
    "python.analysis.autoImportCompletions": true, // Enable feature for auto imports
    "files.associations": {
        "env-local*": "shellscript"
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/"
    ],
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#2d6a30",
        "activityBar.background": "#2d6a30",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#292659",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#2d6a30",
        "statusBar.background": "#1e4620",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#2d6a30",
        "statusBarItem.remoteBackground": "#1e4620",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#1e4620",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#1e462099",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#1e4620",
}
